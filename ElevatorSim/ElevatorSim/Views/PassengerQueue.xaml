<UserControl x:Class="ElevatorSim.Views.PassengerQueue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElevatorSim.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <local:PassengerView Grid.Row="0"/>
        <TextBlock Text="Passengers" Grid.Row="0" TextAlignment="Center" FontSize="15" FontWeight="Bold"/>
        <local:PassengerView Grid.Row="1"/>
        <local:PassengerView Grid.Row="2"/>
        <local:PassengerView Grid.Row="3"/>
        <local:PassengerView Grid.Row="4"/>
    </Grid>
</UserControl>
