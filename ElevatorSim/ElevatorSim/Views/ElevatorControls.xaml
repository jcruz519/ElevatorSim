<UserControl x:Class="ElevatorSim.Views.ElevatorControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElevatorSim.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Content="Start Simulation" Grid.Row="0" Command="{Binding StartSim}"/>
        <Button Content="Up" Grid.Row="1"/>
        <Button Content="Down" Grid.Row="2"/>
        <Button Content="1" Grid.Row="3"/>
        <Button Content="2" Grid.Row="4"/>
        <Button Content="3" Grid.Row="5"/>
        <Button Content="4" Grid.Row="6"/>
        <Button Content="5" Grid.Row="7"/>
    </Grid>
</UserControl>
